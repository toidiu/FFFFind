<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    app:columnCount="1"
    app:rowCount="2"
    >


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        app:layout_gravity="fill"
        app:layout_row="0"
        app:layout_column="0"

        android:weightSum="2"
        >

        <Button
            android:id="@+id/grid_recent"
            android:layout_width="@dimen/grid_size"
            android:layout_height="@dimen/grid_size"
            android:layout_margin="@dimen/grid_margin"
            android:layout_weight="1"

            android:background="@drawable/ffffound"
            android:text="recent"
            />

        <Button
            android:id="@+id/grid_fav"
            android:layout_width="@dimen/grid_size"
            android:layout_height="@dimen/grid_size"
            android:layout_margin="@dimen/grid_margin"
            android:layout_weight="1"

            android:background="@drawable/fav_list"
            android:text="favorite"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        app:layout_row="1"
        app:layout_column="0"

        android:weightSum="2"
        app:layout_gravity="fill">

        <Button
            android:id="@+id/grid_explore"
            android:layout_width="@dimen/grid_size"
            android:layout_height="@dimen/grid_size"
            android:layout_margin="@dimen/grid_margin"
            android:layout_weight="1"

            android:background="@drawable/random"
            android:text="explore"
            />

        <Button
            android:layout_width="@dimen/grid_size"
            android:layout_height="@dimen/grid_size"
            android:layout_margin="@dimen/grid_margin"
            android:layout_weight="1"
            android:text="4"
            android:visibility="invisible"
            />

    </LinearLayout>

</android.support.v7.widget.GridLayout>

